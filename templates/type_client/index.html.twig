{% extends 'base.html.twig' %}

{% block title %}Types de Clients{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Types de Clients</h1>
            <a href="{{ path('app_type_client_new') }}" class="btn btn-primary">Nouveau Type</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Taux de remise</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for type_client in type_clients %}
                    <tr>
                        <td>{{ type_client.nom }}</td>
                        <td>
                            <span class="badge bg-info text-dark">{{ type_client.tauxRemise }}%</span>
                        </td>
                        <td>
                            {% if type_client.actif %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-danger">Inactif</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_type_client_edit', {'id': type_client.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                <form method="post" action="{{ path('app_type_client_delete', {'id': type_client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce type ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_client.id) }}">
                                    <button class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun type de client trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
