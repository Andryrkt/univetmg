{% extends 'base.html.twig' %}

{% block title %}Gestion des Fournisseurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Fournisseurs</h1>
        <a href="{{ path('app_admin_fournisseur_new') }}" class="btn btn-primary">Créer un fournisseur</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.nom }}</td>
                <td>{{ fournisseur.telephone }}</td>
                <td>{{ fournisseur.email }}</td>
                <td>{{ fournisseur.createdAt ? fournisseur.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ fournisseur.updatedAt ? fournisseur.updatedAt|date('d/m/Y H:i') : '' }}</td>
                <td class="text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_admin_fournisseur_show', {'id': fournisseur.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_admin_fournisseur_edit', {'id': fournisseur.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {{ include('admin/fournisseur/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun fournisseur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
