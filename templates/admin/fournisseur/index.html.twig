{% extends 'base.html.twig' %}

{% block title %}Gestion des Fournisseurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Fournisseurs</h1>
        <a href="{{ path('app_admin_fournisseur_new') }}" class="btn btn-primary">Créer un fournisseur</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.nom }}</td>
                <td>{{ fournisseur.telephone }}</td>
                <td>{{ fournisseur.email }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_fournisseur_show', {'id': fournisseur.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_admin_fournisseur_edit', {'id': fournisseur.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('app_admin_fournisseur_delete', {'id': fournisseur.id}) }}" class="btn btn-sm btn-danger" data-turbo-method="POST" data-turbo-confirm="Êtes-vous sûr de vouloir supprimer ce fournisseur ?">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun fournisseur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
