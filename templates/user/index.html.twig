{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Utilisateurs</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Rôles</th>
                <th>Vérifié</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
