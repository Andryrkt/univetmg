{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Utilisateurs</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th>actions</th>
                <th>Rôles</th>
                <th>Vérifié</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td class="text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {{ include('user/_delete_form.html.twig', { 'user': user }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
