{% extends 'base.html.twig' %}

{% block title %}Détail de l'Utilisateur{% endblock %}

{% block body %}
    <h1>Détail de l'Utilisateur</h1>

    <table class="table table-bordered mt-4">
        <tbody>
            <tr><th style="width: 25%;">Id</th><td>{{ user.id }}</td></tr>
            <tr><th>Email</th><td>{{ user.email }}</td></tr>
            <tr><th>Prénom</th><td>{{ user.firstName }}</td></tr>
            <tr><th>Nom</th><td>{{ user.lastName }}</td></tr>
            <tr><th>Rôles</th><td>{{ user.roles|join(', ') }}</td></tr>
            <tr><th>Vérifié</th><td>{{ user.isVerified ? 'Oui' : 'Non' }}</td></tr>
            <tr><th>Créé le</th><td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td></tr>
        </tbody>
    </table>

    <div class="d-flex mt-3">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning ms-2">Modifier</a>
        <div class="ms-auto">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
