{% extends 'base.html.twig' %}

{% block title %}Détail de la Catégorie{% endblock %}

{% block body %}
    <h1>Détail de la Catégorie</h1>

    <table class="table table-bordered mt-4">
        <tbody>
            <tr>
                <th style="width: 20%;">Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            {% if categorie.parent %}
                <tr>
                    <th>Parent</th>
                    <td><a href="{{ path('app_produit_categorie_show', {'id': categorie.parent.id}) }}">{{ categorie.parent.nom }}</a></td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% if categorie.enfant is not empty %}
        <div class="mt-4">
            <h3>Sous-catégories</h3>
            <ul class="list-group">
                {% for child in categorie.enfant %}
                    <li class="list-group-item">
                        <a href="{{ path('app_produit_categorie_show', {'id': child.id}) }}">{{ child.nom }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="d-flex mt-3">
        <a href="{{ path('app_produit_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_produit_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning ms-2">Modifier</a>
        <div class="ms-auto">
            {{ include('produit/categorie/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
