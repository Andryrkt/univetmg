{% extends 'base.html.twig' %}

{% block title %}Détail de la Catégorie{% endblock %}

{% block body %}
    <h1>Détail de la Catégorie</h1>

    <table class="table table-bordered mt-4">
        <tbody>
            <tr>
                <th style="width: 20%;">Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex mt-3">
        <a href="{{ path('app_produit_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_produit_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning ms-2">Modifier</a>
        <div class="ms-auto">
            {{ include('produit/categorie/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
