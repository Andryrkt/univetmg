{% extends 'base.html.twig' %}

{% block title %}Détail de la Catégorie: {{ categorie.nom }}{% endblock %}

{% macro category_list_tree(categories, level) %}
    {% for child in categories %}
        <li class="list-group-item" style="padding-left: {{ 15 + (20 * level) }}px;">
            <a href="{{ path('app_produit_categorie_show', {'id': child.id}) }}">{{ child.nom }}</a>
        </li>
        {% if child.enfant is not empty %}
            {{ _self.category_list_tree(child.enfant, level + 1) }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {% for item in path %}
                {% if not loop.last %}
                    <li class="breadcrumb-item"><a href="{{ path('app_produit_categorie_show', {'id': item.id}) }}">{{ item.nom }}</a></li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">{{ item.nom }}</li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>

    <h1>Détail de la Catégorie</h1>

    <table class="table table-bordered mt-4">
        <tbody>
            <tr>
                <th style="width: 20%;">Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Abréviation</th>
                <td>{{ categorie.abbreviation }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if categorie.enfant is not empty %}
        <div class="mt-4">
            <h3>Sous-catégories</h3>
            <ul class="list-group">
                {{ _self.category_list_tree(categorie.enfant, 0) }}
            </ul>
        </div>
    {% endif %}

    <div class="d-flex mt-3">
        <a href="{{ path('app_produit_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_produit_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning ms-2">Modifier</a>
        <div class="ms-auto">
            {{ include('produit/categorie/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
