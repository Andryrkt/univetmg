{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% macro category_tree(categories, level) %}
    {% for categorie in categories %}
        <tr class="category-level-{{ level }}">
            <td style="padding-left: {{ 20 * level }}px; {% if level == 0 %}font-weight: bold;{% endif %}">
                {{ categorie.nom }}
                {% if categorie.abbreviation %}
                    ({{ categorie.abbreviation }})
                {% endif %}
            </td>
            <td>{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y H:i') : '' }}</td>
            <td>{{ categorie.updatedAt ? categorie.updatedAt|date('d/m/Y H:i') : '' }}</td>
            <td class="text-end">
                <div class="d-flex justify-content-end gap-2">
                    <a href="{{ path('app_produit_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_produit_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    {{ include('produit/categorie/_delete_form.html.twig', { 'categorie': categorie }) }}
                </div>
            </td>
        </tr>
        {% if categorie.enfant is not empty %}
            {{ _self.category_tree(categorie.enfant, level + 1) }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Catégories</h1>
        <a href="{{ path('app_produit_categorie_new') }}" class="btn btn-primary">Créer une catégorie</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% if categories is not empty %}
            {{ _self.category_tree(categories, 0) }}
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucune catégorie trouvée.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

{% endblock %}