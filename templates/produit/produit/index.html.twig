{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Code</th>
                <th>StockInitial</th>
                <th>StockMinimum</th>
                <th>PrixAchat</th>
                <th>PrixVente</th>
                <th>DatePeremption</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.code }}</td>
                <td>{{ produit.stockInitial }}</td>
                <td>{{ produit.stockMinimum }}</td>
                <td>{{ produit.prixAchat }}</td>
                <td>{{ produit.prixVente }}</td>
                <td>{{ produit.datePeremption ? produit.datePeremption|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
