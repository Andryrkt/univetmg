{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Produits</h1>
        <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Créer un produit</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th>Stock Initial</th>
                <th>Prix Vente</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.code }}</td>
                <td>{{ produit.stockInitial }}</td>
                <td>{{ produit.prixVente|number_format(2, ',', ' ') }} Ar</td>
                <td>{{ produit.createdAt ? produit.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ produit.updatedAt ? produit.updatedAt|date('d/m/Y H:i') : '' }}</td>
                <td class="text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {{ include('produit/produit/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun produit trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
