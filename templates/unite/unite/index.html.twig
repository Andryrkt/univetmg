{% extends 'base.html.twig' %}

{% block title %}Gestion des Unités{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Gestion des Unités</h1>
        <a href="{{ path('app_unite_new') }}" class="btn btn-primary">Créer une unité</a>
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Symbole</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unite in unites %}
            <tr>
                <td>{{ unite.id }}</td>
                <td>{{ unite.nom }}</td>
                <td>{{ unite.symbole }}</td>
                <td>{{ unite.createdAt ? unite.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ unite.updatedAt ? unite.updatedAt|date('d/m/Y H:i') : '' }}</td>
                <td class="text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_unite_show', {'id': unite.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_unite_edit', {'id': unite.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {{ include('unite/unite/_delete_form.html.twig', { 'unite': unite }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune unité trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
