{% extends 'base.html.twig' %}

{% block title %}Ajustement de Stock{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-balance-scale"></i> Ajustement de Stock
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        L'ajustement permet de corriger le stock suite à un inventaire physique.
                        Entrez le <strong>nouveau stock réel</strong> du produit.
                    </div>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.produit) }}
                            {{ form_widget(form.produit) }}
                            {{ form_errors(form.produit) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.quantite, 'Nouveau stock réel') }}
                            {{ form_widget(form.quantite) }}
                            {{ form_errors(form.quantite) }}
                            <small class="form-text text-muted">
                                Entrez le stock réel après inventaire
                            </small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.motif) }}
                            {{ form_widget(form.motif) }}
                            {{ form_errors(form.motif) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Enregistrer l'ajustement
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
