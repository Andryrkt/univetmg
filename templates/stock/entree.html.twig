{% extends 'base.html.twig' %}

{% block title %}Entrée de Stock{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Entrée de Stock
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.produit) }}
                            {{ form_widget(form.produit) }}
                            {{ form_errors(form.produit) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.quantite) }}
                            {{ form_widget(form.quantite) }}
                            {{ form_errors(form.quantite) }}
                            <small class="form-text text-muted">
                                Quantité à ajouter au stock
                            </small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.reference) }}
                            {{ form_widget(form.reference) }}
                            {{ form_errors(form.reference) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.motif) }}
                            {{ form_widget(form.motif) }}
                            {{ form_errors(form.motif) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Enregistrer l'entrée
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
