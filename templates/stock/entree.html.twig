{% extends 'base.html.twig' %}

{% block title %}Entrée de Stock{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Enregistrer un nouveau lot (Entrée de Stock)
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_row(form.produit) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.numeroLot) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_row(form.quantite) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.prixAchat) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.datePeremption) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Enregistrer le lot
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
