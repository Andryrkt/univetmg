{% extends 'base.html.twig' %}

{% block title %}Historique - {{ produit.nom }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-history"></i> Historique - {{ produit.nom }}
        </h1>
        <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    {# Informations du produit #}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Informations du Produit</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Code:</strong> {{ produit.code }}
                </div>
                <div class="col-md-3">
                    <strong>Catégorie:</strong> {{ produit.categorie ? produit.categorie.nom : '-' }}
                </div>
                <div class="col-md-3">
                    <strong>Stock Actuel:</strong>
                    <span class="badge bg-primary">{{ stockActuel|number_format(2, ',', ' ') }} {{ produit.uniteDeBase.nom }}</span>
                </div>
                <div class="col-md-3">
                    <strong>Stock Minimum:</strong> {{ produit.stockMinimum|number_format(2, ',', ' ') }}
                </div>
            </div>
        </div>
    </div>

    {# Historique des mouvements #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Historique des Mouvements</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Quantité</th>
                            <th>Stock Avant</th>
                            <th>Stock Après</th>
                            <th>Référence</th>
                            <th>Motif</th>
                            <th>Utilisateur</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mouvement in mouvements %}
                            <tr>
                                <td>{{ mouvement.dateCreation|date('d/m/Y H:i') }}</td>
                                <td>
                                    <span class="badge bg-{{ mouvement.type.badgeClass }}">
                                        {{ mouvement.type.label }}
                                    </span>
                                </td>
                                <td>
                                    {% if mouvement.type.value == 'sortie' %}
                                        <span class="text-danger fw-bold">-{{ mouvement.quantite|number_format(2, ',', ' ') }}</span>
                                    {% else %}
                                        <span class="text-success fw-bold">+{{ mouvement.quantite|number_format(2, ',', ' ') }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ mouvement.stockAvant|number_format(2, ',', ' ') }}</td>
                                <td>
                                    <strong>{{ mouvement.stockApres|number_format(2, ',', ' ') }}</strong>
                                </td>
                                <td>{{ mouvement.reference ?? '-' }}</td>
                                <td>
                                    <small>{{ mouvement.motif ?? '-' }}</small>
                                </td>
                                <td>
                                    <small>{{ mouvement.user.email }}</small>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="fas fa-inbox"></i> Aucun mouvement pour ce produit
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
